{
  "name": "polygrand",
  "version": "0.1.0",
  "description": "PolyGrand - Decentralized Prediction Market Platform on Algorand",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn app:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "start": "npm run dev",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "algorand",
    "prediction-market",
    "blockchain",
    "defi"
  ],
  "author": "PolyGrand Team",
  "license": "MIT"
}
